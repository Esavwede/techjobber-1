<body class="min-h-screen bg-slate-50 font-Default text-black dark:bg-black dark:text-white">
    <!-- Navigaton starts -->

    <div class="container">
        <nav class="nav z-50 mx-auto  text-papayawhip bg-white dark:bg-black ">
            <i class="uil uil-bars navOpenBtn"></i>
